<?xml version="1.0" encoding="UTF-8"?>

<infinispan
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="urn:infinispan:config:7.2 http://www.infinispan.org/schemas/infinispan-config-7.2.xsd"
        xmlns="urn:infinispan:config:7.2">

    <jgroups>
        <stack-file name="jgroupsStack" path="set by benchmark"/>
    </jgroups>

    <cache-container name="default" default-cache="testCache" statistics="false">
        <transport stack="jgroupsStack" lock-timeout="600000" cluster="default" />
        <serialization>
            <!--<advanced-externalizer-->
                  <!--class="org.infinispan.jmhbenchmarks.KeySequenceGenerator$ValueWrapperSerializer"/>-->
        </serialization>
        <jmx duplicate-domains="true">
            <property name="enabled">false</property>
        </jmx>

        <distributed-cache name="dist-sync" mode="SYNC" remote-timeout="60000" statistics="false" l1-lifespan="-1" owners="2" segments="512">
            <locking acquire-timeout="30000" concurrency-level="1000" />
            <transaction mode="NON_XA"/>
            <state-transfer timeout="60000" />
        </distributed-cache>
        <replicated-cache name="repl-sync" mode="SYNC" remote-timeout="1000" statistics="false">
            <locking acquire-timeout="30000" concurrency-level="1000"/>
            <transaction mode="NON_XA"/>
            <state-transfer timeout="60000"/>
        </replicated-cache>
    </cache-container>

</infinispan>
